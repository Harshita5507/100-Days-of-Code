#include <stdio.h>

int main() {
    int num, i, factorial;
    printf("Enter a number whose factorial is to be found: ");
    scanf("%d", &num);

    if (num<0)
    {
    printf("Factorial of a negative number not possible.\n");
    }
    else {
        for (i=1; i<=num; ++i){
            factorial *=i;
        }
        printf("Factorial of %d is: %d ",num, factorial);
    }
    return 0;
}